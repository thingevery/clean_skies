<h1>Listing albums</h1>

<table>
  <tr>
    <th>Album name</th>
    <th>Album description</th>
    <th>Date created</th>
    <th>User</th>
    <th>Photos</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.album_name %></td>
    <td><%= album.album_description %></td>
    <td><%= album.date_created %></td>
    <td><%= album.user_id %></td>
    <td><%= album.photos.count %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

